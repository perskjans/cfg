#!/bin/bash
# vim: set filetype=sh shiftwidth=2 :

SESSION_NAME=perskjans

if [[ "$1" ]]; then
  SESSION_NAME="$1"
fi

echo session: $SESSION_NAME

if [[ `tmux ls 2>/dev/null | grep "$SESSION_NAME" | wc -l` -eq 0 ]]; then
  tmux $HOME/.config/tmux/tmux.conf -u -2 new -s $SESSION_NAME
else
  tmux $HOME/.config/tmux/tmux.conf -u -2 a -t $SESSION_NAME
fi


